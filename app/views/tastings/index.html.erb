<h1>Tastings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Coffee</th>
      <th>Total score</th>
      <th>User</th>
      <th>View tasting</th>
    </tr>
  </thead>

  <tbody>
    <% @tastings.each do |tasting| %>
      <tr>
        <td><%= tasting.origin.name %></td>
        <td><%= tasting.total_score %></td>
        <td><%= tasting.user.name %></td>
        <td><%= link_to 'View', tasting_path(tasting) %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<p><%= link_to 'Record a new tasting', new_tasting_path %></p>
