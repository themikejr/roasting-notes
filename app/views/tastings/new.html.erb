<h1>Record a new tasting</h1>

<%= form_with scope: :tasting, url: tastings_path, local: true do |form| %>

  <div class="container">
    <div class="row">
      <div class="col-md">
        <div class="form-group">
          <%= form.select :origin_id, options_from_collection_for_select(Origin.all, "id", "name") %>
          <%= form.select :batch_id, options_from_collection_for_select(Batch.all, "id", "batch_number") %>
	</div>
        <div class="form-group">
          <%= form.label :dry_fragrance %>
          <%= number_field(:tasting, :dry_fragrance, in: 6.0..10.0, step: 0.25, class: "form-control") %>
        </div>

        <div class="form-group">
          <%= form.label :wet_aroma %>
          <%= number_field(:tasting, :wet_aroma, in: 6.0..10.0, step: 0.25, class: "form-control") %>
        </div>

        <div class="form-group">
          <%= form.label :flavor %>
          <%= number_field(:tasting, :flavor, in: 6.0..10.0, step: 0.25, class: "form-control") %>
        </div>

        <div class="form-group">
          <%= form.label :aftertaste %>
          <%= number_field(:tasting, :aftertaste, in: 6.0..10.0, step: 0.25, class: "form-control") %>
        </div>
        <div class="form-group">
          <%= form.label :acidity %>
          <%= number_field(:tasting, :acidity, in: 6.0..10.0, step: 0.25, class: "form-control") %>
        </div>
        <div class="form-group">
          <%= form.label :body %>
          <%= number_field(:tasting, :body, in: 6.0..10.0, step: 0.25, class: "form-control") %>
        </div>

        <div class="form-group">
          <%= form.label :balance %>
          <%= number_field(:tasting, :balance, in: 6.0..10.0, step: 0.25, class: "form-control") %>
        </div>

        <div class="form-group">
          <%= form.label :sweetness %>
          <%= number_field(:tasting, :sweetness, in: 6.0..10.0, step: 0.25, class: "form-control") %>
        </div>
        <div class="form-group">
          <%= form.label :uniformity %>
          <%= number_field(:tasting, :uniformity, in: 6.0..10.0, step: 0.25, class: "form-control") %>
        </div>

        <div class="form-group">
          <%= form.label :cleanliness %>
          <%= number_field(:tasting, :cleanliness, in: 6.0..10.0, step: 0.25, class: "form-control") %>
        </div>

        <div class="form-group">
          <%= form.label :nose_notes %><br>
          <%= form.text_area :nose_notes, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :mouth_notes %><br>
          <%= form.text_area :mouth_notes, class: "form-control" %>
      </div>

      <div class="form-group">
         <%= form.submit %>
      </div>

      <% end %>

      </div>
    </div>
  </div>

  </div>



