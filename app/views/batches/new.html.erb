<h1>Import a new Batch</h1>

<%= form_for @batch, :url => {:action => :create, :method => :post}, :html => {:multipart => true} do |form| %>
  <%= form.select :origin_id, options_from_collection_for_select(Origin.all, "id", "name") %>

  <p>
    <%= form.label :batch_number %><br>
    <%= form.text_field :batch_number %>
  </p>

  <p>
    <%= form.label :start_weight %><br>
    <%= form.text_field :start_weight %>
  </p>

  <p>
    <%= form.label :end_weight %><br>
    <%= form.text_field :end_weight %>
  </p>


  <p>
    <%= form.label :artisan_json %><br>
    <%= form.text_area :artisan_json %>
  </p>

  <p>
    <%= form.label :artisan_image%>
    <%= form.attachment_field :artisan_image %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
